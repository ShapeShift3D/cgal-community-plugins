        <SourceProxy
            name="IsotropicRemeshingFilter"
            class="stkCGALIsotropicRemeshingFilter"
            label="CGAL Isotropic Remeshing">
            <Documentation
                short_help="Remeshes datasets."
                long_help="Remeshes a dataset.">
                This filter will remesh the given data set. It takes a PolyData 
                as input, and returns a PolyData containing the remeshed input.
                An optional input array can be supplied to mask the remeshing zone.
            </Documentation>
            <InputProperty
                name="Input"
                port_index="0"
                command="SetInputConnection">
                <ProxyGroupDomain name="groups">
                    <Group name="sources" />
                    <Group name="filters" />
                </ProxyGroupDomain>
                <DataTypeDomain name="input_type">
                    <DataType value="vtkPolyData" />
                </DataTypeDomain>
                <InputArrayDomain
                    name="MeshingMaskArray"
                    attribute_type="cell"
                    number_of_components="1"
                    optional="1" />
                <Documentation>
                    The input Mesh.
                </Documentation>
            </InputProperty>
            <StringVectorProperty
                name="MeshingMaskArrayName"
                command="SetMeshingMaskArrayName"
                label="Meshing Mask"
                default_values="None"
                number_of_elements="1">
                <ArrayListDomain
                    name="array_list"
                    none_string="None"
                    input_domain_name="MeshingMaskArray">
                    <RequiredProperties>
                        <Property
                            name="Input"
                            function="Input" />
                    </RequiredProperties>
                </ArrayListDomain>
                <Documentation>
                    Specifies the meshing mask array name.
                </Documentation>
            </StringVectorProperty>
            <IntVectorProperty
                name="ProtectConstraints"
                command="SetProtectConstraints"
                default_values="1"
                number_of_elements="1">
                <Documentation>
                    Toggles border constraints protection.
                    The boundary edges will be considered as constrained and protected.
                </Documentation>
                <BooleanDomain name="bool" />
            </IntVectorProperty>
            <DoubleVectorProperty
                name="TargetEdgeLength"
                command="SetTargetEdgeLength"
                number_of_elements="1"
                default_values="0.0"
                information_property="TargetEdgeLengthInfo">
                <DoubleRangeDomain
                    name="range"
                    min="0.0" />
                <Documentation>
                    The target length for the new edges of the mesh (default is 1% of the bounding box diagonal).
                </Documentation>
            </DoubleVectorProperty>
            <DoubleVectorProperty
                name="TargetEdgeLengthInfo"
                command="GetTargetEdgeLengthInfo"
                information_only="1">
                <SimpleDoubleInformationHelper />
            </DoubleVectorProperty>
            <IntVectorProperty
                name="NumberOfIterations"
                command="SetNumberOfIterations"
                number_of_elements="1"
                default_values="1">
                <IntRangeDomain
                    name="range"
                    min="1" />
                <Documentation>
                    The number of iterations for the sequence of atomic operations performed (edge splits,
                    edge collapses, edge flips, tangential relaxation and projection to the initial surface
                    to generate a smooth mesh with a prescribed edge length).
                </Documentation>
            </IntVectorProperty>
            <Hints>
                <ShowInMenu category="CGAL" />
            </Hints>
        </SourceProxy>
