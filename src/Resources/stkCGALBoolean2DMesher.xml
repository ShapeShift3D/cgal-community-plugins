<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy
      name="CGALBoolean2DMesher"
      class="stkCGALBoolean2DMesher"
      label="CGAL Boolean 2D Mesher"
      base_proxygroup="boolean_meshers"
      base_proxyname="CGALBoolean2DMesher">

      <Documentation
        long_help="Applies a 2d boolean operation on sets of PolyLine inputs."
        short_help="Applies a 2d boolean operation on sets of PolyLine inputs." />

      <Property
        name="Update"
        command="Modified"
        label="Update"
        panel_widget="command_button" />

      <Hints>
        <ShowInMenu category="CGAL" />
      </Hints>

    </SourceProxy>
  </ProxyGroup>
  <!-- ==================================================================== -->
  <ProxyGroup name="boolean_meshers">
    <Proxy name="CGALBoolean2DMesher"
      class="stkCGALBoolean2DMesher"
      label="Boolean 2D #1">

      <Documentation long_help="Applies a 2d boolean operation on sets of PolyLine inputs."
        short_help="Applies a 2d boolean operation on sets of PolyLine inputs.">
      </Documentation>

      <InputProperty name="InputPolyLineSetA"
        port_index="0"
        command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet" />
        </DataTypeDomain>
        <Documentation>
          Set the source data set.
        </Documentation>
      </InputProperty>

      <InputProperty name="InputPolyLineSetB"
        port_index="1"
        command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet" />
        </DataTypeDomain>
        <Documentation>
          Set the source data set
        </Documentation>
      </InputProperty>

      <IntVectorProperty name="OperationMode"
        command="SetOperationMode"
        number_of_elements="1"
        default_values="1">
        <EnumerationDomain name="enum">
          <Entry value="1"
            text="Add" />
          <Entry value="2"
            text="Intersect" />
          <Entry value="3"
            text="A - B" />
          <Entry value="4"
            text="B - A" />
          <Entry value="5"
            text="Exclude Overlap" />
          <Entry value="6"
            text="Complement" />
          <Entry value="7"
            text="Intersect Complement" />
          <Entry value="8"
            text="Exclusive Add" />
        </EnumerationDomain>
        <Documentation>
          This property indicates which operation mode will be used.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="ComplementOf"
        command="SetComplementOf"
        label="Complement Of"
        number_of_elements="1"
        default_values="1">
        <EnumerationDomain name="enum">
          <Entry value="1"
            text="A" />
          <Entry value="2"
            text="B" />
        </EnumerationDomain>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="OperationMode"
            value="6">
          </PropertyWidgetDecorator>
        </Hints>
        <Documentation>
          Apply a complement on an input
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="Plane"
        command="SetPlane"
        number_of_elements="1"
        default_values="1">
        <EnumerationDomain name="enum">
          <Entry value="1"
            text="XY" />
          <Entry value="2"
            text="YZ" />
          <Entry value="3"
            text="XZ" />
        </EnumerationDomain>
        <Documentation>
          This property which plane to consider
        </Documentation>
      </IntVectorProperty>

      <StringVectorProperty name="PwhIdArrayName"
        command="SetPwhIdArrayName"
        number_of_elements="1"
        animateable="0"
        default_values="PolygonWithHolesId"
        panel_visibility="advanced">
        <Documentation>
          Name of the Polygon With Holes Id Array Name
        </Documentation>
      </StringVectorProperty>

      <IntVectorProperty name="OneCell"
        command="SetOneCell"
        label="One Cell"
        number_of_elements="1"
        default_values="1">
        <BooleanDomain name="bool" />
        <Documentation>
          If true, every polygon will be composed of one cell.
        </Documentation>
      </IntVectorProperty>

      <Hints>
        <ShowInMenu category="CGAL" />
      </Hints>

    </Proxy>
  </ProxyGroup>
</ServerManagerConfiguration>