<ServerManagerConfiguration>
  <ProxyGroup name="boolean_meshers">
    <Proxy name="CGALBoolean3DMesher"
      class="stkCGALBoolean3DMesher"
      label="CGAL Boolean">

      <Documentation long_help="Applies a boolean operation on two PolyData inputs."
        short_help="Applies a boolean operation on two PolyData inputs.">
      </Documentation>

      <InputProperty name="InputMeshA"
        port_index="0"
        command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet" />
        </DataTypeDomain>
        <Documentation>
          Set the source data set.
        </Documentation>
      </InputProperty>

      <InputProperty name="InputMeshB"
        port_index="1"
        command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet" />
        </DataTypeDomain>
        <Documentation>
          Set the source data set
        </Documentation>
      </InputProperty>

      <IntVectorProperty name="Mode"
        command="SetMode"
        number_of_elements="1"
        default_values="1">
        <EnumerationDomain name="enum">
          <Entry value="1"
            text="Union" />
          <Entry value="2"
            text="Intersection" />
          <Entry value="3"
            text="Difference" />
          <Entry value="4"
            text="Difference2" />
        </EnumerationDomain>
        <Documentation>
          This property indicates which mode will be used.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty command="SetSkipPreconditions"
        name="SkipPreconditions"
        label="Skip Preconditions"
        default_values="0"
        number_of_elements="1"
        panel_visibility="advanced">
        <Documentation>
          Removes precondition checking
        </Documentation>
        <BooleanDomain name="bool" />
      </IntVectorProperty>

      <IntVectorProperty command="SetComputeSurfaceIntersection"
        name="ComputeSurfaceIntersection"
        label="Compute Surface Intersection"
        default_values="0"
        number_of_elements="1"
        panel_visibility="advanced">
        <Documentation>
          Calculates surface intersection between both inputs.
        </Documentation>
        <BooleanDomain name="bool" />
      </IntVectorProperty>

      <OutputPort name="Boolean Result"
        index="0" />
      <OutputPort name="Intersection"
        index="1" />

    </Proxy>
  </ProxyGroup>
</ServerManagerConfiguration>