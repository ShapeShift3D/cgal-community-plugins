<ServerManagerConfiguration>
    <!-- ==================================================================== -->
    <ProxyGroup name="surface_mesh_topology">
        <Proxy
            class="stkCGALSurfaceMeshTopology"
            name="CGALSurfaceMeshTopology">

            <Documentation
                long_help="CGAL Surface Mesh Topology"
                short_help="CGAL Surface Mesh Topology">
                Generates Non-Contractible cycles on a Surface Mesh from Base Point Mask Array
            </Documentation>

            <InputProperty
                name="Input"
                port_index="0"
                command="SetInputConnection">
                <ProxyGroupDomain name="groups">
                    <Group name="sources" />
                    <Group name="filters" />
                </ProxyGroupDomain>
                <DataTypeDomain name="input_type">
                    <DataType value="vtkPolyData" />
                </DataTypeDomain>
                <InputArrayDomain
                    name="VertexToCheckPointMaskArray"
                    attribute_type="point"
                    number_of_components="1" />
            </InputProperty>

            <StringVectorProperty
                name="BasePointMaskArrayName"
                command="SetBasePointMaskArrayName"
                label="Base Point Array Mask"
                default_values="None"
                number_of_elements="1">
                <ArrayListDomain
                    name="array_list"
                    none_string="None"
                    input_domain_name="VertexToCheckPointMaskArray">
                    <RequiredProperties>
                        <Property
                            name="Input"
                            function="Input" />
                    </RequiredProperties>
                </ArrayListDomain>
                <Documentation>
                    Set the Point Mask Array for defining the Base Points for generation of Non-contractible 
                    cycles. All Points with a postive value in mask array are defined as base points.
                </Documentation>
            </StringVectorProperty>

            <IntVectorProperty
                name="GenerateCycleIDs"
                command="SetGenerateCycleIDs"
                number_of_elements="1"
                default_values="1">
                <BooleanDomain name="bool" />
                <Documentation >
                    Generate ID for each cycle
                </Documentation>
            </IntVectorProperty>

            <IntVectorProperty
                name="CalculateCycleLength"
                command="SetCalculateCycleLength"
                number_of_elements="1"
                default_values="1">
                <BooleanDomain name="bool" />
                <Documentation >
                    Calculate Length of each cycle
                </Documentation>
            </IntVectorProperty>

            <DoubleVectorProperty
                name="SquaredContraintSearchTolerance"
                command="SetSquaredContraintSearchTolerance"
                number_of_elements="1"
                default_values=".000001"
                panel_visibility="advanced">
                <Documentation >
                    Set Square of Tolerance used for locating points
                </Documentation>
            </DoubleVectorProperty>

            <IntVectorProperty
                name="ExtractSimpleCycles"
                command="SetExtractSimpleCycles"
                number_of_elements="1"
                default_values="1"
                panel_visibility="advanced">
                <BooleanDomain name="bool" />
                <Documentation >
                    If ON, collapsed cycles edges will be discarded form the generated cycles
                </Documentation>
            </IntVectorProperty>

            <IntVectorProperty
                name="OptimizeForExecutionTime"
                command="SetOptimizeForExecutionTime"
                number_of_elements="1"
                default_values="1"
                panel_visibility="advanced">
                <BooleanDomain name="bool" />
                <Documentation >
                    If ON, there will be significant reduction in execution time and duplicate cycles.
                    If OFF, if all cycles generated from Base Points will be generated.
                </Documentation>
            </IntVectorProperty>

            <StringVectorProperty
                name="CycleIDArrayName"
                command="SetCycleIDArrayName"
                label="Cycle ID Array Name"
                default_values="Cycle ID"
                number_of_elements="1"
                panel_visibility="advanced">
                <Documentation >
                    Set Cycle ID Array Name
                </Documentation>
                <Hints>
                    <PropertyWidgetDecorator
                        type="GenericDecorator"
                        mode="visibility"
                        property="GenerateCycleIDs"
                        value="1" />
                </Hints>
            </StringVectorProperty>

            <StringVectorProperty
                name="CycleLengthArrayName"
                command="SetCycleLengthArrayName"
                label="Cycle Length Array Name"
                default_values="Cycle Length"
                number_of_elements="1"
                panel_visibility="advanced">
                <Documentation >
                    Set Cycle Length Array Name
                </Documentation>
                <Hints>
                    <PropertyWidgetDecorator
                        type="GenericDecorator"
                        mode="visibility"
                        property="CalculateCycleLength"
                        value="1" />
                </Hints>
            </StringVectorProperty>

            <PropertyGroup label="Non Contractible Cycles Generation ">
                <Property name="BasePointMaskArrayName" />
                <Property name="GenerateCycleIDs" />
                <Property name="CalculateCycleLength" />
            </PropertyGroup>

            <PropertyGroup label="Advanced">
                <Property name="SquaredContraintSearchTolerance" />
                <Property name="OptimizeForExecutionTime" />
                <Property name="ExtractSimpleCycles" />
                <Property name="CycleIDArrayName" />
                <Property name="CycleLengthArrayName" />
            </PropertyGroup>

        </Proxy>
    </ProxyGroup>

    <!-- ==================================================================== -->
    <ProxyGroup name="filters">
        <SourceProxy
            name="CGALSurfaceMeshTopology"
            class="stkCGALSurfaceMeshTopology"
            label="CGAL Surface Mesh Topology"
            base_proxygroup="surface_mesh_topology"
            base_proxyname="CGALSurfaceMeshTopology">

            <Hints>
                <ShowInMenu category="CGAL" />
            </Hints>

        </SourceProxy>
    </ProxyGroup>

</ServerManagerConfiguration>