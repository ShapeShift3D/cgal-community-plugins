<ServerManagerConfiguration>
    <ProxyGroup name="modifiers">

        <Proxy
            class="stkCGALDuplicateNonManifoldVertices"
            name="CGALDuplicateNonManifoldVerticesBase">

            <Documentation
                short_help="Repair Non-Manifold Vertices"
                long_help="Combinatorially Repair Non-Manifold vertices by duplicating the vertices ">\
                Create a combinatorially manifold surface mesh by splitting any
                non-manifold vertex into as many vertices as there are manifold sheets at this
                geometric position. Note however that the mesh will still not be manifold from a
                geometric point of view, as the positions of the new vertices introduced at a
                non-manifold vertex are identical to the input non-manifold vertex.</Documentation>

            <IntVectorProperty
                name="CleanOutput"
                command="SetCleanOutput"
                number_of_elements="1"
                default_values="1">
                <BooleanDomain name="bool" />
                <Documentation>
                    Turn On/Off application of Clean Filter on the output
                </Documentation>
            </IntVectorProperty>

            <SubProxy command="SetCleanPolyDataAlgorithm">
                <Proxy
                    name="CleanPolyDataAlgorithm"
                    proxygroup="modifiers"
                    proxyname="CleanPolyData" />
                <ExposedProperties>
                    <PropertyGroup label="Clean Options">
                        <Property
                            name="PieceInvariant"
                            default_values="1"
                            panel_visibility="advanced" />
                        <Hints>
                            <PropertyWidgetDecorator
                                type="GenericDecorator"
                                mode="visibility"
                                property="CleanOutput"
                                value="1" />
                        </Hints>
                        <Property
                            name="Tolerance"
                            default_values="0"
                            panel_visibility="advanced" />
                        <Hints>
                            <PropertyWidgetDecorator
                                type="GenericDecorator"
                                mode="visibility"
                                property="CleanOutput"
                                value="1" />
                        </Hints>
                        <Property
                            name="AbsoluteTolerance"
                            default_values="0.0"
                            panel_visibility="advanced" />
                        <Hints>
                            <PropertyWidgetDecorator
                                type="GenericDecorator"
                                mode="visibility"
                                property="CleanOutput"
                                value="1" />
                        </Hints>
                        <Property
                            name="ToleranceIsAbsolute"
                            default_values="1"
                            panel_visibility="advanced" />
                        <Hints>
                            <PropertyWidgetDecorator
                                type="GenericDecorator"
                                mode="visibility"
                                property="CleanOutput"
                                value="1" />
                        </Hints>
                        <Property
                            name="ConvertLinesToPoints"
                            default_values="0"
                            panel_visibility="advanced" />
                        <Hints>
                            <PropertyWidgetDecorator
                                type="GenericDecorator"
                                mode="visibility"
                                property="CleanOutput"
                                value="1" />
                        </Hints>
                        <Property
                            name="ConvertPolysToLines"
                            default_values="0"
                            panel_visibility="advanced" />
                        <Hints>
                            <PropertyWidgetDecorator
                                type="GenericDecorator"
                                mode="visibility"
                                property="CleanOutput"
                                value="1" />
                        </Hints>
                        <Property
                            name="ConvertStripsToPolys"
                            default_values="0"
                            panel_visibility="advanced" />
                        <Hints>
                            <PropertyWidgetDecorator
                                type="GenericDecorator"
                                mode="visibility"
                                property="CleanOutput"
                                value="1" />
                        </Hints>
                        <Property
                            name="PointMerging"
                            default_values="1"
                            panel_visibility="advanced" />
                        <Hints>
                            <PropertyWidgetDecorator
                                type="GenericDecorator"
                                mode="visibility"
                                property="CleanOutput"
                                value="1" />
                        </Hints>
                    </PropertyGroup>
                </ExposedProperties>
                <Documentation>
                    Set the algorithm used for cleaning the output PolyData.
                </Documentation>
            </SubProxy>

        </Proxy>

    </ProxyGroup>
    <!-- ==================================================================== -->
    <ProxyGroup name="filters">
        <SourceProxy
            name="CGALDuplicateNonManifoldVertices"
            class="stkCGALDuplicateNonManifoldVertices"
            label="CGAL Duplicate NonManifold Vertices"
            base_proxygroup="modifiers"
            base_proxyname="CGALDuplicateNonManifoldVerticesBase">

            <InputProperty
                name="Input"
                command="SetInputConnection"
                port_index="0">
                <ProxyGroupDomain name="groups">
                    <Group name="sources" />
                    <Group name="filters" />
                </ProxyGroupDomain>
                <DataTypeDomain name="input_type">
                    <DataType value="vtkPolyData" />
                </DataTypeDomain>
                <Documentation>
                    Set the Input Surface Mesh
                </Documentation>
            </InputProperty>

            <Hints>
                <ShowInMenu category="CGAL" />
            </Hints>

        </SourceProxy>
    </ProxyGroup>

</ServerManagerConfiguration>